{
 	"easycom": {
 		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
 	}, 
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
			{
				"path": "pages/index/index",
				"style": {
					"navigationStyle": "custom" // 自定义导航栏
				}
			}
	    ,{
            "path" : "pages/follow/follow",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "关注",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/my/my",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "我的",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/search/search",
            "style" :                                                                                    
            {
                "navigationStyle": "custom" // 自定义导航栏
            }
            
        }
        ,{
            "path" : "pages/label-manager/label-manager",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "标签管理",
                "enablePullDownRefresh": false
            }
            
        }
        ,{
            "path" : "pages/feedback/feedback",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "意见反馈",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#f07373",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#666",
		"selectedColor": "#f07373",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/home.png",
				"selectedIconPath": "static/home-active.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/follow/follow",
				"iconPath": "static/follow.png",
				"selectedIconPath": "static/follow-active.png",
				"text": "关注"
			},
			{
				"pagePath": "pages/my/my",
				"iconPath": "static/my.png",
				"selectedIconPath": "static/my-active.png",
				"text": "我的"
			}						
		]
	}
}
